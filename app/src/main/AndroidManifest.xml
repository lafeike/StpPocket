<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stpub.stppocket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".helper.Helper"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:configChanges="orientation"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PublicationActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".TopicActivity"
            android:label="@string/title_activity_topic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RulebookActivity"
            android:label="@string/title_activity_rulebook"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SectionActivity"
            android:label="@string/title_activity_section"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ParagraphActivity"
            android:label="@string/title_activity_paragraph"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>